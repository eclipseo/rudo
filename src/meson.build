rudo_sources = [
  'main.rs',
  'lib.rs',
  'auth.rs',
  'cli.rs',
  'command.rs',
  'config.rs',
  'journal.rs',
  'session.rs',
  'user.rs',
]

rudo_deps = [
]

cargo_script = find_program(join_paths(meson.source_root(), 'build-aux/cargo.sh'))
cargo_release = custom_target(
  'cargo-build',
  build_by_default: true,
  input: rudo_sources,
  output: meson.project_name(),
  console: true,
  install: true,
  install_dir: get_option('bindir'),
  command: [
    cargo_script,
    meson.build_root(),
    meson.source_root(),
    '@OUTPUT@',
    get_option('buildtype'),
    meson.project_name(),
  ]
)
